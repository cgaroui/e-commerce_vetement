{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<div class="image-hero">
    <div class="superposition-hero">
        <div class="contenu-hero">
            <h1>Bienvenue sur notre site de cosmétiques</h1>
            <p>Découvrez nos produits exceptionnels et offrez-vous un moment de beauté</p>
            <a href="{{ path('app_login') }}" class="btn btn-primaire">Se connecter</a>
        </div>
    </div>
</div>
<style>
    .image-hero {
        position: relative;
        width: 100%;
        height: 500px;
        background-image: url('{{ asset('img/grandeAccueil.jpg') }}');
        background-size: cover;
        background-position: center;
    }
</style>

<div class="categories-produits">
    <a href="{{ path('produits_par_categorie', { id: 1 }) }}" class="item">
        <img src="{{ asset('img/parfum.jpg') }}" alt="Parfum">
        <span>Parfum</span>
    </a>
    <a href="{{ path('produits_par_categorie', { id: 2 }) }}" class="item-categorie">
        <img src="{{ asset('img/cheveux.jpg') }}" alt="Soins cheveux">
        <span>Soins cheveux</span>
    </a>
    <a href="{{ path('produits_par_categorie', { id: 3 }) }}" class="item-categorie">
        <img src="{{ asset('img/visage.jpg') }}" alt="Soins visage">
        <span>Soins visage</span>
    </a>
    <a href="{{ path('produits_par_categorie', { id: 4 }) }}" class="item-categorie">
        <img src="{{ asset('img/solaire.jpg') }}" alt="solaire">
        <span>Solaire</span>
    </a>
    <a href="{{ path('produits_par_categorie', { id: 5 }) }}" class="item-categorie">
        <img src="{{ asset('img/maquillage.jpg') }}" alt="Maquillage">
        <span>Maquillage</span>
    </a>
</div>

<strong><p>Tendance</p></strong><br>

{% for produit in produits %}
    <div class="col-md-4 mb-4 tendance-accueil">
        <div class="carte-produit h-100">
            <img src="{{ produit.image }}" class="image-produit" alt="Image de {{ produit.nom }}">
            <div class="corps-carte">

                <div class="nom-produit">
                    <h5 class="titre-produit"><a href="{{ path('produit_detail', {'id': produit.id}) }}">{{ produit.nom }}</a></h5>
                    {% if produit.reduction %}
                        <p class="texte-produit">
                            <span style="text-decoration: line-through;">{{ produit.prix }} €</span><br>
                            <span style="font-weight: bold;">{{ produit.prix - (produit.prix * produit.reduction / 100) }} €</span>
                            <span class="badge bg-success">{{ produit.reduction }}% de réduction</span>
                        </p>
                    {% endif %}
                    <p class="texte-produit">{{ produit.prix }} €</p>
                </div>

                <div class="ajouter-actions">
                    <a style="text-decoration:none;" href="#"><img src="{{ asset('img/panierAdd.png') }}" alt="Ajouter au panier"></a>&nbsp;
                    <a style="text-decoration:none;" href="#"><img src="{{ asset('img/coeurAdd.png') }}" alt="Ajouter aux favoris"></a>&nbsp;
                </div>
            </div>
        </div>
    </div>
{% endfor %}

{% endblock %}
